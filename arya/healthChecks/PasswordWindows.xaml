<Window x:Class="passwordSection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:checkpasswd"
        mc:Ignorable="d"
        Title="Password Section" Height="400" Width="400">
    <Grid>
        <Label x:Name="infoLabel" Content="Enter Password of the Month" HorizontalAlignment="Center" Margin="0,103,0,0" VerticalAlignment="Top" Height="31" Width="166"/>
        <PasswordBox x:Name="passwdTextbox" HorizontalAlignment="Center" Margin="0,192,0,0" Password="" PasswordChar="*" VerticalAlignment="Top" Width="252" Height="25" Background="#FFD9DAED"/>
        <Button x:Name="startPasswdCheckButton" Content="Start" HorizontalAlignment="Left" Margin="74,291,0,0" VerticalAlignment="Top" Height="29" Width="95"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="229,291,0,0" VerticalAlignment="Top" Height="29" Width="97" IsCancel="True"/>
        <Label x:Name="monthLabel" Content="It is 12/11/2022" HorizontalAlignment="Center" Margin="0,139,0,0" VerticalAlignment="Top" Height="28" Width="92"/>

    </Grid>
</Window>
